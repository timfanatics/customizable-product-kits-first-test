<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--Sale Product Templates-->
    <record id="sale.product_template_action" model="ir.actions.act_window">
        <field name="context">{"search_default_filter_to_sell":1, "sale_multi_pricelist_product_template": 1,
            "search_default_consumable":1}
        </field>
    </record>

    <!--Sale Product Variants-->
    <record id="product.product_normal_action_sell" model="ir.actions.act_window">
        <field name="context">{"search_default_filter_to_sell":1, "search_default_consumable":1}</field>
    </record>

    <!--Invoice Customer Product-->
    <record id="account.product_product_action_sellable" model="ir.actions.act_window">
        <field name="context">{'search_default_filter_to_sell': 1, "search_default_consumable":1}</field>
    </record>

    <!--Invoice Vendor Product-->
    <record id="account.product_product_action_purchasable" model="ir.actions.act_window">
        <field name="context">{'search_default_filter_to_purchase': 1, "search_default_consumable":1}</field>
    </record>

    <!--Inventory Product Variants-->
    <record id="stock.stock_product_normal_action" model="ir.actions.act_window">
        <field name="context">{"search_default_consumable":1}</field>
    </record>

    <!--MRP Product Variants-->
    <record id="mrp.mrp_product_variant_action" model="ir.actions.act_window">
        <field name="context">{"search_default_consumable":1}</field>
    </record>
</odoo>