<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">

                <field name="is_bom_extracted" invisible="1"/>
                <button name="extract_product_bom" string="Extract BOM" type="object" attrs="{'invisible':['|',('is_bom_extracted','!=',False),('state','!=','draft')]}"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']//field[@name='order_line']" position="attributes">
                <attribute name="widget">section_and_note_one2many_expand</attribute>
            </xpath>
        </field>
    </record>

</odoo>