<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <field name="is_bom_extracted" invisible="1"/>
                <button name="extract_product_bom" string="Extract BOM" type="object"
                        attrs="{'invisible':[('state','!=','draft')]}"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']//tree//field[@name='product_id']" position="after">
                <field name="is_bom_head" invisible="1"/>
                <field name="is_sub_product" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']//tree//field[@name='price_unit']" position="attributes">
                <attribute name="attrs">{'readonly':[('is_bom_head', '=', True)]}</attribute>
                <attribute name="force_save">True</attribute>
            </xpath>
            <xpath expr="//page[@name='order_lines']//tree[1]" position="attributes">
                <attribute name="decoration-danger">is_bom_head==True</attribute>
                <attribute name="decoration-info">is_sub_product==True</attribute>
            </xpath>
        </field>
    </record>

</odoo>